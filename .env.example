# Twilio (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=+1415XXXXXXX

# Meta / WhatsApp Business (optional)
META_PHONE_NUMBER_ID=your_meta_phone_number_id
META_WHATSAPP_TOKEN=your_meta_graph_api_token

# Business owner number (the recipient of alerts)
OWNER_WHATSAPP_TO=+1555XXXXXXX

# Choose notifier explicitly (optional): 'meta' or 'twilio'
NOTIFIER_PROVIDER=meta

# Persistence file (optional). Defaults to ./data/leads.json
DATABASE_URL=./data/leads.json

# Example: run locally
# PORT=3000

# Template params (comma-separated lead fields used for template body placeholders)
# Default: name,email,phone
NOTIFIER_TEMPLATE_NAME=your_template_name
NOTIFIER_TEMPLATE_LANG=en_US
NOTIFIER_TEMPLATE_PARAMS=name,email,phone
NOTIFIER_TEMPLATE_FALLBACK=
